mixin title-video(data)
	table(align="center" border="0" cellpadding="0" cellspacing="0" width="100%" style="border-spacing: 0;")
		tr
			td.h1(align="center")!=data.title
		tr
			+td-margin({margin: 'mr-mediumblue'})
		tr
			td(align="center")
				table(align="center" border="0" cellpadding="0" cellspacing="0" width="100%" style="max-width: 100%;")
					tr
						td(align="center")
							table.table-important(align="center" border="0" cellpadding="0" cellspacing="0")
								tr
									td(align="center" style="color: #666666;" width=data.img_width)
										+img(data)


